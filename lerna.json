{
  "lerna": "2.5.0",
  "version": "0.2.0",
  "npmClient": "yarn",
  "parallel": true,
  "message": "chore(release): publish %s",
  "useWorkspaces": true,
  "changelog": {
    "repo": "remyyounes/lerna-changelog-helpers",
    "ignoreCommitters": ["renovate"],
    "labels": {
      "Tag: Breaking Change": ":boom: Breaking Change",
      "Tag: Bug Fix": ":bug: Bug Fix",
      "Tag: Dependencies": ":books: Dependencies",
      "Tag: Enhancement": ":nail_care: Enhancement",
      "Tag: Internal": ":house: Internal",
      "Tag: New Feature": ":gift: New Feature"
    },
    "cacheDir": ".changelog"
  }
}
